<%= form_for(@help_request) do |f| %>

    <%= f.label :title, "Tytuł" %>
    <%= f.text_field :title, placeholder: 'Tytuł', class: 'form-control' %>

    <%= f.label :description, "Treść" %>
    <%= f.text_area :description, placeholder: 'Treść', class: 'form-control' %>

    <%= f.submit "Zapisz zmiany", class: "btn btn-primary" %>
<% end %>